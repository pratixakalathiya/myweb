@model MyApp.Models.ViewModels.CartVm
@using Microsoft.Extensions.Options
@inject IOptions<MyAppCommonHelper.StripeSettings> Stripe
<form method="post">
<section>

    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Shipping Details </h5>
                </div>
                <div class="card-body">
                    <form>
                        <!-- 2 column grid layout with text inputs for the first and last names -->
                        <div class="row mb-4">
                            <div class="col">
                                <div class="form-outline">
                                        <label class="form-label" for="form6Example1">Name</label>
                                    <input type="text" asp-for="@Model.OrderHeader.Name" class="form-control" />
                                   
                                </div>
                            </div>
                            <div class="form-outline mb-4">
                                    <label class="form-label" for="form6Example6">Phone</label>
                                <input type="number" asp-for="@Model.OrderHeader.Phone" class="form-control" />
                               
                            </div>

                            <div class="form-outline mb-4">
                                    <label class="form-label" for="form6Example4">Address</label>
                                <input type="text" asp-for="@Model.OrderHeader.Address" class="form-control" />
                                
                            </div>

                            <div class="form-outline mb-4">
                                    <label class="form-label" for="form6Example6">City</label>
                                <input type="text" asp-for="@Model.OrderHeader.City" class="form-control" />
                                
                            </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form6Example6">State</label>
                                    <input type="text" asp-for="@Model.OrderHeader.State" class="form-control" />

                                </div>

                            <div class="form-outline mb-4">
                                    <label class="form-label" for="form6Example6">Postal Code</label>
                                <input type="number" asp-for="@Model.OrderHeader.PostalCode" class="form-control" />
                                
                            </div>




                            @*<div class="col">
                                <div class="form-outline">
                                    <input type="text" id="form6Example2" class="form-control" />
                                    <label class="form-label" for="form6Example2">Last name</label>
                                </div>
                            </div>*@
                        </div>

                        <!-- Text input -->
                       @* <div class="form-outline mb-4">
                            <input type="text" id="form6Example3" class="form-control" />
                            <label class="form-label" for="form6Example3">Company name</label>
                        </div>*@

                        <!-- Text input -->
                        

                        <!-- Email input -->
                        @*<div class="form-outline mb-4">
                            <input type="email" id="form6Example5" class="form-control" />
                            <label class="form-label" for="form6Example5">Email</label>
                        </div>*@

                        <!-- Number input -->
                       
                        <hr class="my-4" />

                       
                       

                        

                       
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Summary</h5>
                </div>
               
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                         @foreach(var details in @Model.ListOfCart)
                {
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            <span>@details.Product.Name</span>
                                <span>QTY: @details.Count</span>
                            <span>@(((details.Product.Price)*(details.Count)).ToString("c"))</span>
                        </li>
                }
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>Total amount</strong>
                                <strong>
                                    <p class="mb-0">(including VAT)</p>
                                </strong>
                            </div>
                            <span><strong>@Model.OrderHeader.OrderTotal</strong></span>
                        </li>
                            <li>
                                <button class="btn btn-primary btn-lg btn-block" type="submit">
                                    Continue to checkout
                                </button>
                            </li>
                    </ul>
                        <div>
                           
                        </div>
                </div>
            
            </div>
        </div>
    </div>
</section>
</form>
<!-- Credit card form -->