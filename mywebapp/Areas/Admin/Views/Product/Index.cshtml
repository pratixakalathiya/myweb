@model MyApp.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Index";
}
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List Of Products</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="createUpdate" asp-controller="Product"><i class="bi bi-plus-lg"></i>&nbsp;Create New Product</a>
        </div>
    </div>

</div>
<table id="MyTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Category
            </th>
        </tr>
    </thead>
    
</table>

@section scripts{
    <script src="~/js/Product.js"></script>
}


