@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
        <h2 class="text-primary"> Update Category</h2>&nbsp;
        <hr/>
    </div>
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All"></div>
    <div class="row mb-3">
        <lable asp-for="Name">Name</lable>
        <input disabled asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row mb-3">
            <lable asp-for="DisplayOrder">Display Order</lable>
            <input disabled asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
           @* <span asp-validation-for="DisplayOrder" class="text-danger"></span>*@
    </div>
    <button class="btn btn-danger" type="submit">Delete</button>
    </div>
    <a asp-action="Index" asp-controller="category">Back To List</a>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}