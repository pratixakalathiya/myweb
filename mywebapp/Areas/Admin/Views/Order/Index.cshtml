@model MyApp.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Index";
}
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List Of Orders</h2>
        </div>


        <div class="col-6">
            <a asp-action="Index" asp-controller="order" asp-route-status="pending">
                Pending
            </a>
            <a asp-action="Index" asp-controller="order" asp-route-status="approved">
                approved
            </a>
            <a asp-action="Index" asp-controller="order" asp-route-status="underprocess">
                Under Process
            </a>
            <a asp-action="Index" asp-controller="order" asp-route-status="shipped">
                Shipped
            </a>
            <a asp-action="Index" asp-controller="order" asp-route-status="all">
                All
            </a>
        </div>

        @*<div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="createUpdate" asp-controller="Product"><i class="bi bi-plus-lg"></i>&nbsp;Create New Product</a>
        </div>*@
    </div>

</div>
<table id="MyTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                 Name
            </th>
            <th>
                PhoneNumber 
            </th>
            <th>
                order Status
            </th>
            <th>
                order Total
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

</table>

@section scripts{
    <script src="~/js/Order.js"></script>
}


